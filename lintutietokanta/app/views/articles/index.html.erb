<h1>Lintuhavainto lista</h1>
<%= link_to 'Uusi havainto', new_article_path %>
<%= form_tag articles_path, :method => 'get' do %>

<% end %>
<table>
  <tr>
    <th>Havainnoitsija </th>
    <th>Lintu</th>
    <th>Paikka</th>
    <th>Aika</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.place %></td>
      <td><%= article.time %></td>
      <td><%= link_to 'Näytä', article_path(article) %></td>
      <td><%= link_to 'Muokkaa', edit_article_path(article) %></td>
    </tr>
  <% end %>
<% if current_user %>
  Kirjautuneena: <%= current_user.email %> | <%= link_to "Kirjaudu ulos", '/logout' %>
<% else %>
  <%= link_to 'Kirjaudu sisään', '/login' %> | <%= link_to 'Rekisteröidy', '/signup' %>
<% end %>

<%= yield %>

</table>
